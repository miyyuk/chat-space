.chat-side
  .side-header
    .side-header__box
      .side-header__box__username
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-header__box__menu__edit-account
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__group-name
            = group.name
