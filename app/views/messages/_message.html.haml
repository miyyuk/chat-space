.message{data: {message: {id: message.id}}}
  .message-info
    .message-info__talker
      = message.user.name
    .message-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message-box
    -if message.content.present?
      %p.message-box__content
        = message.content
    = image_tag message.image.url, class: 'message__box__image' if message.image.present?
